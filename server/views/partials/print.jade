.main-content(style="min-height:0" role="navigation")
    h2 {{ print.title }}
    p.crumbs
        a(href="#/") Home
        span >
        a(href="#prints/All") Prints
        span >
        a(href="#prints/{{ print.category }}") {{ print.category }}
        span >
        span {{ print.title }}
#infoWrapper(ng-controller="shoppingcartController" role="main")
    .printInfo
        .printImage
            img(src="img/printImg/{{ print.img }}")
            .printDetails
                h2.italic {{ print.title }}
                h3.thin {{ price | currency :"" : 2 }} sek
                form(ng-submit="add(print.title, price, material, size)")
                    select.select-style(
                    ng-model="material"
                    ng-change="setPrice(material, size)"
                    ng-required=""
                    ng-options="material.name as material.name for material in materials"
                    )
                    br
                    select(
                    ng-model="size"
                    ng-change="setPrice(material, size)"
                    ng-required=""
                    ng-options="size.size as size.size for size in sizes | filter : {format: print.ratio} : true"
                    )
                    br
                    button.btn Add to cart


