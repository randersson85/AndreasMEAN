.main-content(role="main")
    h2 Shopping cart
    #shoppingCart
        div(ng-repeat="print in cart")
            .cartRow
                .column
                    img(src="img/printImg/{{print.img}}")
                .column
                    h3 {{ print.title }}
                    p {{ print.type }}
                    p {{ print.size }}
                    a(href="" ng-click="remove(print.id, print.type, print.size)")
                        p Remove
                 .column
                     h3 {{ print.price | currency :"sek" : 2 }}
                 .column
                     a(href="" ng-click="increment(print.id, print.type, print.size)")
                        i.fa.fa-plus
                     span(style="margin:0 10px;") {{ print.quantity }}
                     a(href="" ng-click="decrement(print.id, print.type, print.size)")
                        i.fa.fa-minus
        h1 Sum: {{ sum | currency :"sek" : 2 }}
        img(ng-click="checkout()" src="https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif" style="cursor:pointer")